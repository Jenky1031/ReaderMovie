.post-container {
    display: flex;
    flex-direction: column;
    margin-top: 20rpx;
    margin-bottom: 40rpx;
    background-color: #fff;
    border-top: 1px solid #ededed;
    border-bottom: 1px solid #ededed;
    padding-bottom: 10rpx;
}

.post-author-date {
    display: flex;
    align-items: center;
    margin: 10rpx 0 20rpx 10rpx;
}

.post-author {
    width: 60rpx;
    height: 60rpx;
    align-self: center;
}

.post-date {
    margin-left: 20rpx;
    font-size: 26rpx;
}

.post-title {
    font-size: 34rpx;
    font-weight: bold;
    margin-bottom: 10px;
    margin-left: 10px;
    color: #333;
}

.post-image {
    width: 100%;
    height: 340rpx;
    margin-bottom: 15px;
}

.post-content {
    font-size: 28rpx;
    color: #666;
    letter-spacing: 2rpx;
    margin-bottom: 20rpx;
    margin-left: 20rpx;
}

.post-like {
    display: flex;
    align-items: center;
    font-size: 26rpx;
    margin-left: 20rpx;
}

.post-like-image {
    width: 32rpx;
    height: 32rpx;
    margin-right: 16rpx;
}

.post-like-font {
    margin-right: 40rpx;
}
